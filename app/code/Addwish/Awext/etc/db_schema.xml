<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="hello_retail_delta" resource="default" engine="innodb" comment="Hello Retail delta">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="true" comment="Product ID"/>
        <column xsi:type="int" name="updated_at" nullable="false" comment="Product last updated"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="HELLO_RETAIL_DELTA_PRODUCT_ID_UNIQUE">
            <column name="product_id"/>
        </constraint>
        <index referenceId="HELLO_RETAIL_DELTA_IDX_UPDATED_AT" indexType="btree">
            <column name="updated_at"/>
        </index>
    </table>
</schema>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/preorder/products/:sku" method="GET">
        <service class="Bss\PreOrder\Api\PreOrderRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Magento_Catalog::products" />
        </resources>
    </route>
    <route url="/V1/preorder/config" method="GET">
        <service class="Bss\PreOrder\Api\PreOrderRepositoryInterface" method="getConfig"/>
        <resources>
            <resource ref="Magento_Backend::admin" />
        </resources>
    </route>
</routes>

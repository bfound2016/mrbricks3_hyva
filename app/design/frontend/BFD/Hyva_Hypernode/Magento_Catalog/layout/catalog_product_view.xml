<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <remove src="Mollie_Payment::css/styles.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">mt-0 product text-3xl font-semibold text-center md:px-0 md:mt-10 md:mb-3</argument>
                <argument name="add_base_attribute" xsi:type="string">itemprop="name"</argument>
            </arguments>
        </referenceBlock>
        <move element="product.info.review" destination="page.main.title" as="product.review.summary" />
    </body>
</page>

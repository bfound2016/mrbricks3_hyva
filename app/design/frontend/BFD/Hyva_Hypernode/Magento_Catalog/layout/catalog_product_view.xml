<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_modal"/>
    <head>
        <remove src="Mollie_Payment::css/styles.css"/>
    </head>
    <body>
        <!-- #5 Product Title -->
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">product text-2xl md:px-0 md:mt-10 md:mb-3 md:col-start-1 md:row-start-1</argument>
                <argument name="add_base_attribute" xsi:type="string">itemprop="name"</argument>
            </arguments>
        </referenceBlock>
        <move element="product.info.review" destination="page.main.title" as="product.review.summary" />
        <referenceContainer name="product.info">
            <block name="product.info.selling.points"
                   class="Magento\Catalog\Block\Product\View"
                   template="Magento_Catalog::product/view/selling-points.phtml">
            </block>
        </referenceContainer>
        <referenceBlock name="product.detail.page">
            <!-- #6 Rich Content implementation -->
            <block  name="product.rich.media"
                    class="Magento\Catalog\Block\Product\View"
                    template="Magento_Catalog::product/view/rich-content.phtml"
                    before="product.info.details">
            </block>
        </referenceBlock>
        <referenceBlock name="product.info.details">
        <!--<block name="specifications"
                   template="Magento_Catalog::product/view/sections/specifications.phtml"
                   group="detailed_info">
                <arguments>
                    <argument name="title_template" xsi:type="string">Magento_Catalog::product/view/sections/specifications-section-title.phtml</argument>
                    <argument name="sort_order" xsi:type="number">-15</argument>
                </arguments>
            </block>
        -->
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block  name="product.rich.media.script"
                    class="Magento\Catalog\Block\Product\View"
                    template="Magento_Catalog::product/view/rich-script.phtml" />
        </referenceContainer>
    </body>
</page>

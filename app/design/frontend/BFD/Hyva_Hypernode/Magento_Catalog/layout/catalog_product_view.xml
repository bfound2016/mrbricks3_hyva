<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <remove src="Mollie_Payment::css/styles.css"/>
    </head>
    <body>
        <!-- #5 Product Title -->
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">mt-0 product text-3xl font-semibold text-center md:px-0 md:mt-10 md:mb-3</argument>
                <argument name="add_base_attribute" xsi:type="string">itemprop="name"</argument>
            </arguments>
        </referenceBlock>
        <move element="product.info.review" destination="page.main.title" as="product.review.summary" />
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">order-2 mt-0 product text-3xl font-semibold text-center md:px-0 md:mt-10 md:mb-3</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="product.info.details">
            <!-- #6 Rich Content implementation -->
            <block  name="product.rich.media"
                    class="Magento\Catalog\Block\Product\View"
                    template="Magento_Catalog::product/view/rich-content.phtml"
                    group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="string">Product Tour</argument>
                    <argument name="sort_order" xsi:type="number">-30</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block  name="product.rich.media.script"
                    class="Magento\Catalog\Block\Product\View"
                    template="Magento_Catalog::product/view/rich-script.phtml" />
        </referenceContainer>


    </body>
</page>

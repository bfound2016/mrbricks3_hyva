    </div>
    <script>
        function fetchReviewModalContent() {
            let reviewsLoaded = false
            return {
                reviews: [],
                currentPage: 1,
                totalPages: 1,
                loadContent() {
                    if (reviewsLoaded) return

                    let query =
                        `{
                        products(filter: {sku: {eq: "<?= $sku ?>"}}) {
                        items {
                            review_count
                            rating_summary
                            reviews(pageSize: 99, currentPage: 1) {
                                items {
                                    created_at
                                    nickname
                                    summary
                                    text
                                    average_rating
                                    }
                                }
                            }
                        }
                    }`;

                    fetch('/graphql', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            query: query
                        }),
                    })
                        .then(response => response.json())
                        .then(data => {
                            reviewsLoaded = true;
                            this.reviews = data.data.products.items[0].reviews.items;
                            this.totalPages = Math.ceil(data.data.products.items[0].review_count / 10);

                            // Build the Alpine.js template
                            let reviewsHtml = '<div class="table">';
                            this.reviews.forEach(review => {
                                let date = new Date(review.created_at);
                                let shortDate = date.toLocaleDateString('nl-NL');
                                let longDate = date.toLocaleDateString('nl-NL', {  day: 'numeric', month: 'long', year: 'numeric' });
                                reviewsHtml += `
                                                <div itemscope itemprop="review" itemtype="http://schema.org/Review"
                                                     class="pb-4 my-4 last:border-0 last:mb-0 flex flex-col prose border-t py-4">
                                                    <time
                                                        class="inline-block p-2 self-start bg-lego-blue-lighter text-xs mb-2"
                                                        itemprop="datePublished"
                                                        datetime="${shortDate}"
                                                    >
                                                    <span>${longDate}</span>
                                                   </time>
                                                <div>
                                                    <strong itemprop="author" itemscope itemtype="https://schema.org/Person">
                                                        <span itemprop="name">${review.nickname}</span>
                                                    </strong>
                                                </div>
                                                <div class="table">
                                                    <div class="table-row" itemprop="reviewRating" itemscope itemtype="http://schema.org/Rating">
                                                        <div class="flex flex-row items-center"
                                                            role="img"
                                                            aria-label=""
                                                        >
                                                        <span class="text-lego-blue-dark text-sm ml-4" itemprop="ratingValue">${review.average_rating}</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="font-bold" itemprop="name">${review.text}</div>
                                                <div class="mt-1" itemprop="description">${review.summary}</div>
                                            `;
                            });
                            document.getElementById('review-list').innerHTML = reviewsHtml;
                        })
                        .catch(console.error);
                },
                addEventListener() {
                    document.addEventListener('fetchReviews', this.loadContent);
                },
            }
        }

        // Initialize the fetchReviewModalContent object and add the event listener
        const reviewModalContent = fetchReviewModalContent();
        reviewModalContent.addEventListener();

        // Get the #reviewsLoader button and add a click event listener
        const reviewsLoaderButton = document.getElementById('reviewsLoader');
        reviewsLoaderButton.addEventListener('click', function() {
            // Dispatch the custom event when the button is clicked
            const event = new Event('fetchReviews');
            document.dispatchEvent(event);
        });
    </script>
    <div x-data="hyva.modal({
        duration: 200,
        transitionEnter: 'duration-700',
        transitionEnterStart: 'translate-x-full',
        transitionEnterEnd: 'translate-x-0',
        transitionLeave: 'duration-500',
        transitionLeaveStart: 'translate-x-0',
        transitionLeaveEnd: 'translate-x-full'
        }), fetchReviewModalContent()">
        <button id="reviewsLoader" @click="<?= $escaper->escapeHtmlAttr($ReviewModal->getShowJs()) ?>; $dispatch('fetchReviews')" class="btn btn-primary rounded-4xl mt-4 self-start">
            <span class="block mx-auto my-2"><?= $escaper->escapeHtml(__('Show All Reviews')) ?></span>
        </button>
